{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <h1>Page d'accueil</h1>

    {% for type, messages in app.flashes %}
        {% for message in messages %}
            <div style="font-size: 20px" class="{{ type }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <table class="table">
        <thead>
        <tr>
            <th>Nom</th>
            <th>Description</th>
            <th>Prix</th>
            <th>Stock</th>
            <th>Image</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.name }}</td>
                <td>{{ product.description }}</td>
                <td>{{ product.price }}</td>
                <td>{{ product.stock }}</td>
                <td> <img style="height: 50px; width: 50px" src="{{ asset('/uploads/' ~ product.image) }}"/></td>
                <td>
                    <a href="{{ path('products_show', {'id': product.id}) }}">Voir</a>
                    {#  <a href="{{ path('products_edit', {'id': product.id}) }}">edit</a> #}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Aucun produits trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {#  <a href="{{ path('products_new') }}">Create new</a>#}


    {% if is_granted('ROLE_ADMIN') %}
        <h1>Créer un nouveau produit (admin)</h1>

        {{ include('products/_form.html.twig') }}


    {% endif %}

    {% if is_granted('ROLE_USER') or is_granted('ROLE_ADMIN') %}
    <a href="{{ path('shop_index') }}">Panier</a>
    <a href="{{ path('app_profile') }}">Mon compte</a>
     {% else %}
            <a href="{{ path('app_login') }}">Connexion</a>

    {% endif %}



{% endblock %}
